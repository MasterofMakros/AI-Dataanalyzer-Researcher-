
# Conductor Environment Config
# Copy this to .env

# =============================================================================
# BASE PATHS
# =============================================================================

# Linux Example
# CONDUCTOR_ROOT=/opt/conductor
# CONDUCTOR_INBOX=/mnt/data/inbox
# CONDUCTOR_QUARANTINE=/mnt/data/quarantine
# CONDUCTOR_TESTPOOL=/mnt/data/test_pool

# Windows Default
CONDUCTOR_ROOT=F:/conductor
CONDUCTOR_INBOX=F:/_Inbox
CONDUCTOR_QUARANTINE=F:/_Quarantine
CONDUCTOR_TESTPOOL=F:/_TestPool

# =============================================================================
# CORE SERVICES (Docker Network)
# =============================================================================

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Search & Storage
MEILISEARCH_URL=http://localhost:7700
MEILI_MASTER_KEY=masterKey
QDRANT_URL=http://localhost:6335
QDRANT_API_KEY=

# Legacy
OLLAMA_URL=http://localhost:11435

# =============================================================================
# DOCUMENT PROCESSING PIPELINE (2025)
# =============================================================================

# Document Processor (Unified: Docling + Surya + GLiNER)
# Replaces: neural-worker, surya-ocr, gliner-pii
DOCUMENT_PROCESSOR_URL=http://localhost:8005
PROCESSOR_DEVICE=cuda

# Intelligence Pipeline
UNIVERSAL_ROUTER_URL=http://localhost:8030
ORCHESTRATOR_URL=http://localhost:8020

# Audio/Video Processing
WHISPERX_URL=http://localhost:9000

# Fallback Services
TIKA_URL=http://localhost:9998
TESSERACT_URL=http://localhost:8008

# Legacy (deprecated)
NEURAL_WORKER_URL=http://localhost:8005

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# GLiNER NER/PII Detection
GLINER_MODEL=urchade/gliner_medium-v2.1

# Embeddings
EMBED_MODEL=intfloat/multilingual-e5-large

# Surya OCR
SURYA_LANGS=de,en
SURYA_BATCH_SIZE=4

# WhisperX
WHISPERX_MODEL=large-v3
WHISPERX_COMPUTE_TYPE=float16
WHISPERX_DEVICE=cuda

# =============================================================================
# NOTIFICATIONS
# =============================================================================

TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

