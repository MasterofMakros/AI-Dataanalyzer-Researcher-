
# Conductor Environment Config
# Copy this to .env

# =============================================================================
# BASE PATHS
# =============================================================================

# Linux Example
# CONDUCTOR_ROOT=/opt/conductor
# CONDUCTOR_INBOX=/mnt/data/inbox
# CONDUCTOR_QUARANTINE=/mnt/data/quarantine
# CONDUCTOR_TESTPOOL=/mnt/data/test_pool

# Windows Default
CONDUCTOR_ROOT=F:/conductor
CONDUCTOR_INBOX=F:/_Inbox
CONDUCTOR_QUARANTINE=F:/_Quarantine
CONDUCTOR_TESTPOOL=F:/_TestPool

# =============================================================================
# DATA PATHS (Standardized Layout)
# =============================================================================
# All runtime data should be stored in these directories.
# These paths are relative to CONDUCTOR_ROOT or can be absolute.

CONDUCTOR_DATA_DIR=./data
CONDUCTOR_INBOX_DIR=./data/inbox
CONDUCTOR_STAGING_DIR=./data/staging
CONDUCTOR_PROCESSED_DIR=./data/processed
CONDUCTOR_INDEX_DIR=./data/index
CONDUCTOR_CACHE_DIR=./data/cache
CONDUCTOR_LOGS_DIR=./data/logs
CONDUCTOR_TMP_DIR=./data/tmp

